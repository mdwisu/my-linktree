---
import { MapPin, Mail, ChevronDown } from 'lucide-astro';
import { profileData } from '../data/links';
---

<section class="flex flex-col items-center text-center py-12 px-4 animate-fade-in">
  <!-- Profile Image -->
  <div class="relative mb-6 group">
    <div class="absolute -inset-1 bg-gradient-to-r from-purple-600 to-pink-600 rounded-full blur opacity-30 group-hover:opacity-50 transition duration-300"></div>
    <img
      src={profileData.avatar}
      alt={profileData.name}
      class="relative w-32 h-32 rounded-full object-cover border-4 border-white dark:border-gray-700 shadow-xl group-hover:scale-105 transition-transform duration-300"
      loading="eager"
    />
    <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-green-500 rounded-full border-3 border-white dark:border-gray-700 animate-bounce-gentle"></div>
  </div>

  <!-- Name and Bio -->
  <h1 class="text-3xl md:text-4xl font-bold font-poppins mb-2 gradient-text animate-slide-up">
    {profileData.name}
  </h1>
  
  <p class="text-gray-600 dark:text-gray-300 text-lg mb-4 max-w-md animate-slide-up" style="animation-delay: 0.1s;">
    {profileData.bio}
  </p>

  <!-- Location and Email -->
  <div class="flex flex-col sm:flex-row items-center gap-4 text-sm text-gray-500 dark:text-gray-400 animate-slide-up" style="animation-delay: 0.2s;">
    {profileData.location && (
      <div class="flex items-center gap-1">
        <MapPin class="w-4 h-4" />
        <span>{profileData.location}</span>
      </div>
    )}
    
    {profileData.email && (
      <div class="flex items-center gap-1">
        <Mail class="w-4 h-4" />
        <a href={`mailto:${profileData.email}`} class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors">
          {profileData.email}
        </a>
      </div>
    )}
  </div>

  <!-- Scroll indicator -->
  <div class="mt-8 animate-bounce">
    <ChevronDown class="w-6 h-6 text-gray-400" />
  </div>
</section>