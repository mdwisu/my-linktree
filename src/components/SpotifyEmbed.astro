---
export interface Props {
  trackId?: string;
  playlistId?: string;
  type?: 'track' | 'playlist' | 'album';
  theme?: 'dark' | 'light';
}

const { 
  trackId = "3W4U7TEgILGpq0EmquurtH", // Default track
  playlistId,
  type = "track",
  theme = "dark"
} = Astro.props;

const embedUrl = type === 'track' 
  ? `https://open.spotify.com/embed/track/${trackId}?utm_source=generator&theme=${theme}`
  : `https://open.spotify.com/embed/playlist/${playlistId}?utm_source=generator&theme=${theme}`;
---

<div class="spotify-embed mb-6">
  <div class="glass-effect rounded-2xl p-4">
    <h3 class="text-lg font-semibold mb-3 text-gray-800 dark:text-white flex items-center gap-2">
      <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 24 24">
