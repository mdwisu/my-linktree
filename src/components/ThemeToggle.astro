---
import { Sun, Moon } from 'lucide-astro';
---

<button
  id="theme-toggle"
  class="fixed top-4 right-4 z-50 p-3 rounded-full glass-effect hover:scale-110 transition-all duration-200 group"
  aria-label="Toggle theme"
>
  <Sun class="w-5 h-5 text-amber-500 dark:hidden" />
  <Moon class="w-5 h-5 text-indigo-400 hidden dark:block" />
</button>

<script>
  const button = document.getElementById('theme-toggle');
  const handleToggle = () => {
    document.documentElement.classList.toggle('dark');
    localStorage.setItem(
      'theme',
      document.documentElement.classList.contains('dark') ? 'dark' : 'light'
    );
  };
  
  button?.addEventListener('click', handleToggle);
</script>