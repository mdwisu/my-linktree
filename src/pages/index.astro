---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ProfileSection from '../components/ProfileSection.astro';
import LinkSection from '../components/LinkSection.astro';
import SocialLinks from '../components/SocialLinks.astro';
import QRCode from '../components/QRCode.astro';
import { profileData } from '../data/links';
---

<Layout title={`${profileData.name} - Links`} description={`Connect with ${profileData.name} - ${profileData.bio}`}>
  <ThemeToggle />
  
  <div class="container mx-auto min-h-screen flex flex-col">
    <!-- Main content -->
    <div class="flex-1">
      <ProfileSection />
      <LinkSection />
      <SocialLinks />
      <QRCode />
    </div>
    
    <!-- Footer -->
    <footer class="py-6 text-center text-sm text-gray-500 dark:text-gray-400">
      <p class="mb-2">Made with ‚ù§Ô∏è using Astro & Tailwind CSS</p>
      <div class="flex justify-center items-center gap-4">
        <button 
          onclick="window.print()" 
          class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors"
        >
          üìÑ Print
        </button>
        <button 
          onclick="navigator.share ? navigator.share({title: document.title, url: window.location.href}) : navigator.clipboard.writeText(window.location.href)" 
          class="hover:text-indigo-600 dark:hover:text-indigo-400 transition-colors"
        >
          üì§ Share
        </button>
      </div>
    </footer>
  </div>
</Layout>

<style>
  @media print {
    .fixed { display: none !important; }
    body { background: white !important; }
    .glass-effect { background: white !important; border: 1px solid #e5e7eb !important; }
  }
</style>